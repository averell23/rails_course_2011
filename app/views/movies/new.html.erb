<% form_for @movie do |f| %>
  <%= f.label :director %>
  <br/>
  <%= @movie.errors.on(:director) %> <%= f.text_field :director %>
  <br/>
  <%= f.label :title %>
  <br/>
  <%= @movie.errors.on(:title) %><%= f.text_field :title %> 
  <br/>
  <%= label_for :lead_actor %>
  <br/>
  <%= @movie.errors.on(:lead_actor) %><%= f.text_field :lead_actor %> 
  <br/>
  <%= f.submit %>
<% end %>
