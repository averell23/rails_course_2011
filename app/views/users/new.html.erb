<% form_for @user do |f| %>
  <%= f.label :username %>
  <br/>
  <%= @user.errors.on(:username) %> <%= f.text_field :username %>
  <br/>
  <%= f.label :password %>
  <br/>
  <%= @user.errors.on(:password) %><%= f.password_field :password %> 
  <br/>
  <%= f.label :password_confirmation %>
  <br/>
  <%= @user.errors.on(:password_confirmation) %><%= f.password_field :password_confirmation %> 
  <br/>
  <%= f.submit %>
<% end %>
